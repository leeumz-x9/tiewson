rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /heatmap_clicks/{clickId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /user_sessions/{sessionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}